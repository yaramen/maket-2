body {
    margin: 0;
    padding: 0;

    font-family: 'Open Sans', Helvetica, sans-serif;
    font-size: 16px;
    line-height: 1.42;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: $text-color;
}


* {
    box-sizing: border-box;
}

main {
    background-color: #f8fafe;
}
