.data-table {
    width: 100%;

    &__row {
        display: flex;
        padding: 12px 5px;
    }

    &__name {
        flex-grow: 1;
    }

    &__percent {
        width: 100px;
    }

    &__edit {
        width: 40px;
        text-align: right;
    }

    &__remove {
        width: 40px;
        text-align: right;
    }

    &__icon {
        width: 14px;
        height: 14px;
    }
}
