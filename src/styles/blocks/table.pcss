.table {
    display: flex;
    font-size: 16px;

    &__thead {
        margin-right: 75px;
    }

    &__header, &__values{
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding-bottom: 20px;
    }

    &__title {

        font-weight: 600;
        opacity: 0.15;
    }

    &__value, &__title {
        margin-bottom: 15px;
    }
}
